{
  "version": 2,
  "functions": {
    "api/companies.mjs": {
      "runtime": "nodejs18.x"
    },
    "api/products.mjs": {
      "runtime": "nodejs18.x"
    },
    "api/clients.mjs": {
      "runtime": "nodejs18.x"
    },
    "api/notices.mjs": {
      "runtime": "nodejs18.x"
    },
