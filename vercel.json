{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "vue-project/dist",
  "installCommand": "npm install && cd vue-project && npm install",
  "functions": {
    "api/swagger-ui.html.js": {
      "maxDuration": 10
    },
    "api/docs.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/swagger-ui.html",
      "destination": "/api/swagger-ui.html"
    },
    {
      "source": "/docs",
      "destination": "/api/docs"
    },
    {
      "source": "/api-docs", 
      "destination": "/api/docs"
    },
    {
      "source": "/swagger",
      "destination": "/api/docs"
    },
    {
      "source": "/swagger-spec.json",
      "destination": "/swagger-spec.json"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}