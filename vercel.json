{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "vue-project/dist",
  "installCommand": "npm install && cd vue-project && npm install",

  "functions": {
    "api/products.js": {
      "maxDuration": 30
    },
    "api/auth.js": {
      "maxDuration": 30
    }
  },

  "rewrites": [
    {
      "source": "/api/products",
      "destination": "/api/products.js"
    },
    {
      "source": "/api/auth",
      "destination": "/api/auth.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/swagger-ui.html",
      "destination": "/swagger-ui.html"
    },
    {
      "source": "/swagger-spec.json",
      "destination": "/swagger-spec.json"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}